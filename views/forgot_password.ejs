<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Title -->
    <title>Forgot password</title>
    <%- include common_header.ejs %>
    <script src="/js/forgot_password.js"></script>
    <script>
        $(window).on('load', function () {

        });
    </script>
</head>

<body>
<main>

    <!-- Header -->
    <%- include common_menu.ejs %>
    <!-- End Header -->

    <!-- Login -->
    <section class="container g-py-100">
        <div class="row justify-content-center">
            <div class="col-sm-8 col-lg-5">
                <div class="g-brd-around g-brd-gray-light-v4 rounded g-py-40 g-px-30">
                    <header class="text-center mb-4">
                        <h2 class="h2 g-color-black g-font-weight-600">Quên mật khẩu</h2>
                    </header>

                    <!-- Form -->
                    <form id="form-forgot-password" class="g-py-15">
                        <div class="mb-4">
                            <label class="g-color-gray-dark-v2 g-font-weight-600 g-font-size-13">Email *</label>
                            <input class="form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded g-py-15 g-px-15" name="Email" type="email" placeholder="johndoe@gmail.com">
                        </div>
                        <div class="row justify-content-between">
                            <div class="col-12 align-self-center text-center">
                                <button id="btn-submit" onclick="forgotPassword.doForgotPassword()" class="btn btn-md u-btn-primary rounded g-py-13 g-px-25" type="button">Gửi</button>
                            </div>
                        </div>
                    </form>
                    <!-- End Form -->

                    <footer class="text-center">
                        <p class="g-color-gray-dark-v5 g-font-size-13 mb-0">Đã có tài khoản? <a class="g-font-weight-600" href="/user/login">Đăng nhập</a>
                        </p>
                    </footer>
                </div>
            </div>
        </div>
    </section>
    <!-- End Login -->

    <!-- Copyright Footer -->
    <%- include common_footer.ejs %>
</main>

</body>

</html>
