<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Title -->
    <title>Login</title>
    <%- include common_header.ejs %>
    <script src="/js/login.js"></script>
    <script src="/js/jquery.sha256.min.js"></script>
    <script>
        $(window).on('load', function () {

        });
    </script>
</head>

<body>
<main>

    <!-- Header -->
    <%- include common_menu.ejs %>
    <!-- End Header -->

    <!-- Login -->
    <section class="container g-py-100">
        <div class="row justify-content-center">
            <div class="col-sm-8 col-lg-5">
                <div class="g-brd-around g-brd-gray-light-v4 rounded g-py-40 g-px-30">
                    <header class="text-center mb-4">
                        <h2 class="h2 g-color-black g-font-weight-600">Đăng nhập</h2>
                    </header>

                    <!-- Form -->
                    <form id="form-login" class="g-py-15">
                        <div class="mb-4">
                            <label class="g-color-gray-dark-v2 g-font-weight-600 g-font-size-13">Email *</label>
                            <input class="form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded g-py-15 g-px-15" name="Email" type="email" placeholder="johndoe@gmail.com">
                        </div>

                        <div class="g-mb-35">
                            <div class="row justify-content-between">
                                <div class="col align-self-center">
                                    <label class="g-color-gray-dark-v2 g-font-weight-600 g-font-size-13">Mật khẩu *</label>
                                </div>
                                <div class="col align-self-center text-right">
                                    <a class="d-inline-block g-font-size-12 mb-2" href="/user/forgot_password">Quên mật khẩu?</a>
                                </div>
                            </div>
                            <input class="form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded g-py-15 g-px-15 mb-3" name="Password" type="password" placeholder="********">
                            <div class="row justify-content-between">
                                <div class="col-12 align-self-center text-center">
                                    <button onclick="login.doLogin()" class="btn btn-md u-btn-primary rounded g-py-13 g-px-25" type="button">Đăng nhập</button>
                                </div>
                            </div>
                        </div>
                    </form>
                    <!-- End Form -->

                    <footer class="text-center">
                        <p class="g-color-gray-dark-v5 g-font-size-13 mb-0">Chưa có tài khoản? <a class="g-font-weight-600" href="/user/signup">Đăng ký</a>
                        </p>
                    </footer>
                </div>
            </div>
        </div>
    </section>
    <!-- End Login -->

    <!-- Copyright Footer -->
    <%- include common_footer.ejs %>
</main>

</body>

</html>
