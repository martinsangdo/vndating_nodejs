<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Title -->
    <title>Change Password</title>
    <%- include common_header.ejs %>
    <script src="/js/change_password.js"></script>
    <script>
      $(window).on("load", function () {
        var onloadCallback = function () {
          if (!common.isAuth()) {
            common.redirect("/user/login");
          }
        };
      });
    </script>
  </head>

  <body>
    <main>
      <!-- Header -->
      <%- include common_menu.ejs %>
      <!-- End Header -->

      <!-- Login -->
      <section class="container g-py-100">
        <div class="row justify-content-center">
          <div class="col-sm-10 col-md-9 col-lg-6">
            <div
              class="g-brd-around g-brd-gray-light-v4 rounded g-py-40 g-px-30"
            >
              <header class="text-center mb-4">
                <h2 class="h2 g-color-black g-font-weight-600">Đổi mật khẩu</h2>
              </header>

              <!-- Form -->
              <form id="form-change-password" class="g-py-15">
                <div class="row">
                  <div class="col-12 mb-4">
                    <label
                      class="g-color-gray-dark-v2 g-font-weight-600 g-font-size-13"
                      >Mật khẩu hiện tại *</label
                    >
                    <input
                      class="form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded g-py-15 g-px-15"
                      name="Password"
                      type="password"
                      placeholder="********"
                    />
                  </div>
                </div>

                <div class="row">
                  <div class="col-12 mb-4">
                    <label
                      class="g-color-gray-dark-v2 g-font-weight-600 g-font-size-13"
                      >Mật khẩu mới *</label
                    >
                    <input
                      class="form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded g-py-15 g-px-15"
                      name="NewPassword"
                      type="password"
                      placeholder="********"
                    />
                  </div>
                </div>

                <div class="row">
                  <div class="col-12 mb-4">
                    <label
                      class="g-color-gray-dark-v2 g-font-weight-600 g-font-size-13"
                      >Mật khẩu mới xác nhận *</label
                    >
                    <input
                      class="form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded g-py-15 g-px-15"
                      name="NewRePassword"
                      type="password"
                      placeholder="********"
                    />
                  </div>
                </div>

                <div class="row justify-content-between mb-5">
                  <div class="col-12 align-self-center text-center">
                    <button
                      onclick="changePassword.doChangePassword()"
                      class="btn btn-md u-btn-primary rounded g-py-13 g-px-25"
                      type="button"
                    >
                      Lưu
                    </button>
                  </div>
                </div>
              </form>
              <!-- End Form -->
            </div>
          </div>
        </div>
      </section>
      <!-- End Login -->

      <!-- Copyright Footer -->
      <%- include common_footer.ejs %>
    </main>
  </body>
</html>
